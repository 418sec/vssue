.vssue-alert-container
  position relative
  z-index 100
  min-height 2px
  overflow-y visible
  transform translateY(-11px)
  .vssue-alert
    position absolute
    z-index 101
    cursor pointer
    top 0
    padding 10px 20px
    width 100%
    color $vssue-theme-color
    border solid 2px lighten($vssue-theme-color, 70%)
    border-radius 5px
    background-color lighten($vssue-theme-color, 95%)
