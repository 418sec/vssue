{
  "private": true,
  "workspaces": [
    "packages/@vssue/*",
    "packages/vssue",
    "packages/docs"
  ],
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "lint": "eslint --ext .js,.ts,.vue .",
    "test": "jest",
    "tsc:b": "tsc -b ./tsconfig.build.json",
    "tsc:w": "yarn tsc:b --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,md,yml,yaml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/config-lerna-scopes": "^9.1.2",
    "@meteorlxy/eslint-config-prettier": "^1.1.0",
    "@meteorlxy/eslint-config-prettier-typescript-vue": "^1.0.6",
    "@meteorlxy/prettier-config": "^1.1.0",
    "@types/jest": "^26.0.10",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "sort-package-json": "^1.44.0",
    "stylus": "^0.54.8",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "vite": "^1.0.0-rc.4"
  }
}
